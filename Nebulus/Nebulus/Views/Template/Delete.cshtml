@model Nebulus.Models.MessageItem

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Template</h2>

<h3>Are you sure you want to delete this template?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Title")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MessageTitle)
        </dd>

        <dt>
            @Html.DisplayName("Message")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MessageBody)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> 
            @Html.ActionLink("Cancel", "Index", "", new { @class = "btn btn-default" })
        </div>
    }
</div>
